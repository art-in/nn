{
    "editor.formatOnSave": true,
    // match default rust style
    "editor.tabSize": 4,
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "*.mutable": {
                // do not underline mutable variables, because it's too much visual noise
                "underline": false,
            }
        }
    },
    "resmon.show.cpufreq": false,
}